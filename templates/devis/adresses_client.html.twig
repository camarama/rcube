{% extends 'base.html.twig' %}

{% block title %}Adresse{% endblock %}

{% block body %}
    <section id="portfolio" class="section-bg mt-5">
        <div class="container">
            <div class="d-flex justify-content-center">
                <h3 class="">Formulaire d'adresses</h3>
            </div>
            <div class="d-flex justify-content-around">
                <div class="col-md-5">
                    <h5 class="text-primary">Choisissez les adresses</h5>
                    <div class="d-flex justify-content-start">
                        {% if client.adresses|length != 0 %}
                            <form action="{{ path('admin_commande') }}" method="post">
                                <h5 class="">Adresse d'enl√®vement et de livraison</h5>
                                {% for adresse in client.adresses %}
                                    <div class="form-check">
                                        <input type="radio" id="{{ adresse.id }}" name="enlevement" class="form-check-input" value="{{ adresse.id }}">
                                        <label class="form-check-label" for="{{ adresse.id }}">
                                            {{ adresse.rue }}, {{ adresse.cp }} {{ adresse.ville }} - {{ adresse.pays }}
                                            <a href="{{ path('admin_adresse_suppression', {'id': adresse.id}) }}" class="text-danger"><i class="ion-ios-trash"></i></a>
                                        </label>
                                    </div>
                                {% endfor %}
                                <br><br>
                                <h5>Adresse de facturation</h5>
                                {% for adresse in client.adresses %}
                                    <div class="form-check">
                                        <input type="radio" id="{{ adresse.id }}" name="facturation" class="form-check-input" value="{{ adresse.id }}">
                                        <label class="form-check-label" for="{{ adresse.id }}">
                                            {{ adresse.rue }}, {{ adresse.cp }} {{ adresse.ville }} - {{ adresse.pays }}
                                            <a href="{{ path('admin_adresse_suppression', {'id': adresse.id}) }}" class="text-danger"><i class="ion-ios-trash"></i></a>
                                        </label>
                                    </div>
                                {% endfor %}
                                <div class="d-flex justify-content-end mt-3">
                                    <button class="btn btn-primary">Valider mes adresses</button>
                                </div>
                            </form>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-7">
                    <h5 class="d-flex justify-content-center text-primary">Ajouter une nouvelle adresse</h5>
                    {{ form_start(form) }}
                        <div class="form-row">
                            <div class="form-error">
                                <div class="invalid-tooltip">
                                    {{ form_errors(form) }}
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-around">
                            <div class="form-group mr-3">
                                {{ form_row(form.telephone) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.rue) }}
                            </div>
                        </div>
                        <div class="d-flex justify-content-around">
                            <div class="form-group mr-3">
                                {{ form_row(form.cp) }}
                            </div>
                            <div class="form-group mr-3">
                                {{ form_row(form.ville) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.pays) }}
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="form-group">
                                {{ form_row(form.complement) }}
                            </div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary col-md-4">Ajouter</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}




