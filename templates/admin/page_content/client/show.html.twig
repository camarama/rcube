{% extends 'admin/tableau_de_bord.html.twig' %}

{% block title %}Client{% endblock %}

{% block page_content %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ client.designation }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Siret</th>
                <td>{{ client.siret }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_client_index') }}">back to list</a>

    <a href="{{ path('admin_client_edit', {'id': client.id}) }}">edit</a>

    {{ include('admin/page_content/client/_delete_form.html.twig') }}
{% endblock %}
