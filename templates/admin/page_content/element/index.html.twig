{% extends 'admin/tableau_de_bord.html.twig' %}

{% block title %}Element index{% endblock %}

{% block page_content %}
    <h1>Element index</h1>
    <div class="m-3">
        <a class="btn btn-default" href="{{ path('admin_journal_comptable_rubrique') }}">Gestion des Rubriques</a>
    </div>
    <table class="table" id="tableau">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rubrique</th>
                <th>Nom</th>
                <th>Date</th>
                <th>Montant</th>
                {#                <th>File</th>#}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for element in elements %}
            <tr>
                <td>{{ element.id }}</td>
                <td>{{ element.type.nom }}</td>
                <td>{{ element.nom }}</td>
                <td>{{ element.date ? element.date|date('Y-m-d') : '' }}</td>
                <td>{{ element.montant }}</td>
                {#                <td>{{ element.file }}</td>#}
                <td>
                    <a href="{{ path('admin_journal_comptable_element_show', {'id': element.id}) }}">show</a>
                    <a href="{{ path('admin_journal_comptable_element_edit', {'id': element.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_journal_comptable_element_new') }}">Create new</a>
{% endblock %}
