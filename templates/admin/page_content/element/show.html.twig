{% extends 'admin/tableau_de_bord.html.twig' %}

{% block title %}Element{% endblock %}

{% block page_content %}
    <h1>Element</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ element.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ element.nom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ element.date ? element.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ element.montant }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ element.file }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ element.comment }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_journal_comptable_element') }}">back to list</a>

    <a href="{{ path('admin_journal_comptable_element_edit', {'id': element.id}) }}">edit</a>

    {{ include('admin/page_content/element/_delete_form.html.twig') }}
{% endblock %}
