{% extends 'admin/tableau_de_bord.html.twig' %}

{% block title %}

{% endblock %}

{% block page_content %}
    <div class="container-fluid">
        <div class="card p-3">
            <div class="card-title">
                <h1 class="d-flex justify-content-center mt-3">Facture {{ commande.client.designation }} </h1>
                <div class="d-flex justify-content-between mb-3 pt-3">
                    <div class="">
                        <div class="">Date du facture : {{ "now"|date('d/m/Y') }}</div>
                        <div class="">N° de facture : </div>
                        <div class="">Echéance : {{ "now"|date_modify("+30 day")|date('d-m-Y') }}</div>
                        <div class="">N° de devis : {{ commande.reference }}</div>
                    </div>
                    <div class="mr-5">
                        <h4 class="font-weight-bold">{{ commande.client.designation }}</h4>
                        <p>
                            <small>
                                {{ commande.prestation.adresses.facturation.rue }} <br>
                                {{ commande.prestation.adresses.facturation.cp }}
                                {{ commande.prestation.adresses.facturation.ville }} <br>
                                {{ commande.prestation.adresses.facturation.pays }}
                            </small>
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <em>
                        Intitulé : Réparation et remplacement de pièces d'emballages plastiques industriels et commerciaux.
                    </em>
                </div>
                <div class="table-responsive-md">
                    <table class="table">
                        <thead class="thead-light">
                        <tr class="">
                            <th scope="col">N°</th>
                            <th scope="col">Désignation</th>
                            <th scope="col">Couleur</th>
                            <th scope="col">Quantité</th>
                            <th scope="col">Mesure</th>
                            <th scope="col">PUHT</th>
                            <th scope="col">Total HT</th>
                            <th scope="col">TVA</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for produit in commande.prestation.produits %}
                            <tr class="bg-light">
                                <th scope="row">{{ loop.index }}</th>
                                <td>{{ produit.nom }}</td>
                                <td>{{ produit.couleur }}</td>
                                <td>{{ produit.quantite }}</td>
                                <td colspan="3">U</td>
                            </tr>
                            {% for materiel in produit.materiels %}
                                <tr class="">
                                    <th scope="row"></th>
                                    <td colspan="2" class="text-capitalize">
                                        <small><em>{{ materiel.designation }}</em></small>
                                    </td>
                                    <td>
                                        <small><em>{{ materiel.quantite }}</em></small>
                                    </td>
                                    <td>
                                        <small><em>{{ materiel.mesure }}</em></small>
                                    </td>
                                    <td>
                                        <small><em>{{ materiel.prix_unitaire }} €</em></small>
                                    </td>
                                    <td>
                                        <small>
                                            <em>{{ materiel.prixHT }} €</em>
                                        </small>
                                    </td>
                                    <td colspan="2">
                                        <small><em>{{ materiel.tva }} €</em></small>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="text-right mr-4">
                    <div class="mt-2 mb-2">
                        <div class="">Total HT : <span class="ml-3"><strong>{{ commande.prestation.totalHT|number_format(2, ',', ' ', ' ') }} €</strong></span></div>
                    </div>
                    {% for key, tva in commande.prestation.tva %}
                        <div class="mb-2">
                            <div class="text-capitalize">{{ key }} : <span class="ml-4"><strong>{{ tva|number_format(2, ',', ' ', ' ') }} €</strong></span></div>
                        </div>
                    {% endfor %}
                    <div class="mb-2">
                        <div class="">Total TTC : <span class="ml-3"><strong>{{ commande.prestation.totalTTC|number_format(2, ',', ' ', ' ') }} €</strong></span></div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <div class="mt-3 p-2">
                        <h5 class="pt-3">Détails bancaires</h5>
                        <p>
                            Banque : {{ entreprise_banque }}<br>
                            Code banque : {{ entreprise_code_banque }}<br>
                            N° de compte : {{ entreprise_compte }}<br>
                            IBAN : {{ entreprise_iban }}<br>
                            SWIFT/BIC : {{ entreprise_bic }}
                        </p>
                    </div>
                    <div class="mt-3 p-2 text-right">
                        <h5 class="pt-3">Payement</h5>
                        <p>
                            Acompte : <strong>{{ (commande.prestation.totalTTC * 30 / 100)|number_format(2, ',', ' ') }} €</strong>
                            <br>
                            Solde à payer : <strong>{{ (commande.prestation.totalTTC - (commande.prestation.totalTTC * 30 / 100))|number_format(2, ',', ' ') }} €</strong><br>
                            Echéance : <strong>{{ "now"|date_modify("+30 day")|date('d-m-Y') }}</strong> <br>
                            Modes de paiement acceptés : chèque et virement bancaire. <br>
                        </p>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a href=""></a>
            </div>
        </div>
    </div>
{% endblock %}

