{% extends 'admin/tableau_de_bord.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block page_content %}
    <h1>Categorie index</h1>

    <table class="table" id="tableau">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a href="{{ path('admin_categorie_show', {'id': categorie.id}) }}">show</a>
                    <a href="{{ path('admin_categorie_edit', {'id': categorie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_categorie_new') }}">Create new</a>
{% endblock %}
